[req]
default_bits       = 4096
prompt             = no
default_md         = sha256
distinguished_name = dn
req_extensions     = req_ext

[dn]
CN = elasticsearch.elk.svc.cluster.local

[req_ext]
subjectAltName = @alt_names

[alt_names]
DNS.1 = elasticsearch.elk.svc.cluster.local
DNS.2 = elasticsearch
DNS.3 = localhost
